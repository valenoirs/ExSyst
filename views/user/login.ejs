<div class="container-fluid" style="padding: 5% 10% 5% 10%;"">
  <div class="row">
    <div class="col-5">
      <h3 class="text-danger mb-3">Login</h3>
      <form method="POST" action="/login">
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" required>
          <p class="form-text">Don't have account? <a class="text-danger" href="/register">Register</a>. or forget password? <a class="text-danger" href="/recovery">Recover</a></p>
        </div>
        <button type="submit" class="btn btn-danger">Login</button>
      </form>
    </div>
  </div>
</div>