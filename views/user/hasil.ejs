<div class="container-fluid" style="padding: 55px 10% 5% 10%">
  <div class="row">
    <h3 class="text-danger mb-3">Hasil Diagnosa</h3>
    <h6 class="text-secondary mb-5"><i class="bi bi-calendar-check"> </i><%= new Date().toLocaleString('id') %></h6>
    <table class="table table-bordered border-danger">
      <tbody>
        <% if (locals.namaUser) { %>
        <tr>
          <th scope="row" style="width: 200px">Nama</th>
          <td><%= locals.namaUser %></td>
        </tr>
        <% } %>
        <tr>
          <th scope="row">Kemungkinan</th>
          <td class="text-danger">
            <% riwayat.persentase.forEach(penyakit => { %>
            <p>
              <%= penyakit.nama %> : <%=
              penyakit.persentase.toString().slice(0,4) %>%
            </p>
            <% }) %>
          </td>
        </tr>
        <tr>
          <th scope="row">Penyakit</th>
          <td class="text-danger"><%= riwayat.penyakit %></td>
        </tr>
        <tr>
          <th scope="row">Solusi</th>
          <td><%= riwayat.solusi %></td>
        </tr>
        <tr>
          <th scope="row">Gejala</th>
          <td>
            <% riwayat.gejala.forEach((gejala, i) => { %>
            <p><%= i + 1 %>. <%= gejala %></p>
            <% }) %>
          </td>
        </tr>
        <tr>
          <th scope="row">Pencegahan</th>
          <td>
            <% riwayat.pencegahan.forEach((pencegahan, i) => { %>
            <p><%= i + 1 %>. <%= pencegahan %></p>
            <% }) %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
