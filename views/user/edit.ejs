<div class="container-fluid" style="padding: 55px 10% 5% 10%;">
    <div class="row">
      <div class="col-sm-12 col-md-5">
        <h3 class="text-danger mb-3">Edit Profile</h3>
        <form method="POST" action="/edit">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" aria-describedby="emailHelp" required>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
          </div>
          <div class="mb-3">
            <label for="nama" class="form-label">Name</label>
            <input type="text" class="form-control" id="nama" name="nama" value="<%= user.nama %>" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Verifikasi diri anda" minlength="8" required>
          </div>
          <button type="submit" class="btn btn-danger">Edit</button>
        </form>
      </div>
    </div>
  </div>