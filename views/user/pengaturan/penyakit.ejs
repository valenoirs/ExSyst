<div class="container-fluid" style="padding: 55px 10% 5% 10%">
    <div class="row">
      <h3 class="text-danger mb-3">Pengaturan Penyakit</h3>
      <h6 class="text-secondary mb-4"><%= locals.namaUser %></h6>
      <table class="table table-hover">
        <thead>
          <tr class="text-danger">
            <th scope="col" style="width: 1rem">No</th>
            <th scope="col" style="width: 5rem">Penyakit</th>
            <th scope="col" style="width: 5rem">Rules</th>
            <th scope="col" style="width: 5rem">Detail</th>
          </tr>
        </thead>
        <tbody>
          <% penyakit.forEach((e,i) => { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= e.nama %></td>
            <td><% e.rules.forEach(element => { %>
             <%= element %> | 
            <% }) %></td>
            <td>
              <a
                class="text-danger"
                style="text-decoration: none"
                href="/penyakit/<%= e.id %>"
              >
                Detail
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  